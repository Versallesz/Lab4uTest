@model Lab4uTest.Usuario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class=" mx-4 headers-usuarios sombra-header">
    <h2 class="aviso-borrar-usuario">¿Está seguro que quiere borrar este usuario?</h2>
</div>
<section class="seccion-espacios d-flex flex-wrap">
    <div class="informacion-usuarios col-sm-12 col-md-5">
        <h4>Campos del usuario</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt class="detalles-campo">
                <i class="fa fa-user" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd class="detalles-texto">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="detalles-campo">
                <i class="fa fa-at" aria-hidden="true"></i>  @Html.DisplayNameFor(model => model.Correo)
            </dt>

            <dd class="detalles-texto">
                @Html.DisplayFor(model => model.Correo)
            </dd>

        </dl>
        <!--Etiqueta form para accionar el Delete-->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-5">
                <a class="btn  btn-success mt-2 btn-block" role="button" href="/Usuarios"> <i class="fa fa-arrow-left" aria-hidden="true"></i> Volver a la lista</a>
                <input type="submit" value="Borrar Usuario" class="btn btn-outline-danger btn-block" />
            </div>

        }
    </div>
    
    <div class="d-none d-md-flex col-sm-12 col-md-7">
        <img class="img-formularios" src="~/Content/img/borrar.svg" width="350" />
    </div>
</section>
